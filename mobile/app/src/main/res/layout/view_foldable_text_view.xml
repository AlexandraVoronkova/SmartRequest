<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/ll_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?selectableItemBackground"
		android:orientation="horizontal"
		android:paddingStart="19dp"
		android:paddingTop="15dp"
		android:paddingEnd="19dp"
		android:paddingBottom="10dp">

		<TextView
			android:id="@+id/tv_title"
			style="@style/SmallBoldCharcoal"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:textAllCaps="true"
			tools:text="Foldable text title" />

		<TextView
			android:id="@+id/tv_title_sign"
			style="@style/SmallBoldCoralRed"
			tools:text="+" />

	</LinearLayout>

	<TextView
		android:id="@+id/tv_foldable_text"
		style="@style/NormalRegularCharcoal"
		android:layout_width="match_parent"
		android:paddingStart="19dp"
		android:paddingTop="2dp"
		android:paddingEnd="19dp"
		android:paddingBottom="13dp"
		android:textSize="15dp"
		tools:text="Folded text. \n\nMay contain more than one line" />

</LinearLayout>