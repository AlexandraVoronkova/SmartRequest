<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<TextView
		android:id="@+id/tv_title"
		style="@style/NormalBoldCharcoal"
		android:labelFor="@id/et_text"
		tools:text="Title"/>

	<EditText
		android:id="@+id/et_text"
		style="@style/SmallRegularCinder"
		android:layout_width="match_parent"
		android:layout_marginTop="9dp"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:paddingBottom="10dp"
		android:paddingTop="4dp"
		android:background="@drawable/underlined_titled_input_background"
		android:inputType="text"
		android:textColorHint="@color/charcoal_50_percent_transparent"
		android:maxLines="1"
		tools:text="Value"/>

</merge>