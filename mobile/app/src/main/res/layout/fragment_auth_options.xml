<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/auth_screen_background"
        android:clipChildren="false">

        <include layout="@layout/transparent_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/btn_registration"
                style="@style/TransparentBorderedButton"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:text="@string/auth_screen_register" />

            <TextView
                android:id="@+id/btn_authorization"
                style="@style/TransparentBorderedButton"
                android:layout_marginTop="12dp"
                android:text="@string/auth_screen_login"
                app:layout_constraintEnd_toEndOf="@+id/btn_registration"
                app:layout_constraintStart_toStartOf="@+id/btn_registration"
                app:layout_constraintTop_toBottomOf="@+id/btn_registration" />

        </LinearLayout>

    </FrameLayout>


</ScrollView>

